<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookAppointment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_line"
        android:layout_width="413dp"
        android:layout_height="86dp"
        android:background="#F58634"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="48dp"
        android:layout_height="67.8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/abc_vector_test"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top_line"
        app:layout_constraintBottom_toBottomOf="@id/top_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Book an Appointment"
        android:textSize="27dp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="67.8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_vector_end"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/cream"
        android:layout_width="965px"
        android:layout_height="1651.57px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_cream_background" />
    <ImageView
        android:id="@+id/bookbtn"
        android:layout_width="888px"
        android:layout_height="106.55px"
        app:layout_constraintLeft_toLeftOf="@id/cream"
        app:layout_constraintRight_toRightOf="@id/cream"
        app:layout_constraintBottom_toBottomOf="@id/cream"
        android:src="@drawable/bookbutton"
        android:layout_marginBottom="25dp"/>
    <TextView
        android:layout_width="677.82px"
        android:layout_height="80.42px"
        app:layout_constraintLeft_toLeftOf="@id/bookbtn"
        app:layout_constraintRight_toRightOf="@id/bookbtn"
        app:layout_constraintTop_toTopOf="@id/bookbtn"
        app:layout_constraintBottom_toBottomOf="@id/bookbtn"
        android:text="BOOK APPOINTMENT"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/dateBtn"
        android:layout_width="239px"
        android:layout_height="296.54px"
        android:src="@drawable/datebutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="238px"
        android:layout_height="295px"
        app:layout_constraintTop_toTopOf="@id/dateBtn"
        app:layout_constraintLeft_toLeftOf="@id/dateBtn"
        app:layout_constraintRight_toRightOf="@id/dateBtn"
        app:layout_constraintBottom_toBottomOf="@id/dateBtn"
        android:text="Please set the Date"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>